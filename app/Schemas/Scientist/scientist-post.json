{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "scientist"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "firstname": {
              "type": "string",
              "default": "Jeremuel"
            },
            "lastname": {
              "type": "string",
              "default": "Raymundo"
            }
          },
          "required": [
            "firstname",
            "lastname"
          ]
        },
        "relationships": {
          "type": "object",
          "properties": {
            "theory": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "default": "assss"
                    }
                  },
                  "required": [
                    "title"
                  ]
                }
              },
              "required": [
                "data"
              ]
            }
          },
          "required": [
            "theory"
          ]
        }
      },
      "required": [
        "type",
        "attributes",
        "relationships"
      ]
    }
  },
  "required": [
    "data"
  ]
}